<header class="shadow-md bg-base-100 dark:bg-base-900 text-base-content dark:text-base-content-dark" id="header">
    <div class="container mx-auto p-4 flex justify-between items-center">
        <div class="flex items-center space-x-4">
            <div class="md:hidden">
                <button id="dropdownButton" class="btn btn-ghost">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transform rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
                <div id="dropdownMenu" class="hidden absolute bg-base-100 dark:bg-base-900 shadow-md mt-2 rounded-md left-0 right-0 w-full z-50">
                    <ul class="flex flex-col space-y-2 p-4">
                        {% for link in site.navigation %}
                            {% if link.title != "Blog" or site.enableBlog %}
                                <li>
                                    <a href="{{ link.url }}">{{ link.title }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <h1 class="text-2xl font-bold" id="siteName">{{ site.name }}</h1>
        </div>
        <nav class="hidden md:flex items-center space-x-4">
            <ul class="flex space-x-4">
                {% for link in site.navigation %}
                    {% if link.title != "Blog" or site.enableBlog %}
                        <li>
                            <a href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </nav>
        <div class="theme-switcher ml-4 hidden md:block">
            <label for="theme-select" class="sr-only">Choose theme:</label>
            <select id="theme-select" class="select select-bordered">
                {% for theme in themes %}
                    <option value="{{ theme }}">{{ theme | capitalize }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="theme-switcher ml-4 md:hidden">
            <button id="themeToggleButton" class="btn btn-ghost">
                <span id="themeIcon">
                    <svg id="sunIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v2m0 14v2m9-9h-2M5 12H3m15.364-6.364l-1.414 1.414M6.343 17.657l-1.414 1.414M18.364 18.364l-1.414-1.414M6.343 6.343L4.929 4.929M12 8a4 4 0 100 8 4 4 0 000-8z" />
                    </svg>
                    <svg id="moonIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12.79A9 9 0 1111.21 3a7 7 0 009.79 9.79z" />
                    </svg>
                </span>
            </button>
        </div>
    </div>
</header>