<header class="shadow-md bg-base-100 dark:bg-base-900 text-base-content dark:text-base-content-dark" id="header" role="banner">
    <div class="container mx-auto p-4 flex justify-between items-center">
        <div class="flex items-center space-x-4">
            <div class="md:hidden">
                <button id="dropdownButton" class="btn btn-ghost btn-lg md:btn-lg" aria-expanded="false" aria-controls="dropdownMenu" aria-label="Toggle navigation menu">
                    <i class="fas fa-bars h-8 w-8 md:h-8 md:w-8 transform rotate-180" aria-hidden="true"></i>
                </button>
                <div id="dropdownMenu" class="hidden absolute bg-base-100 dark:bg-base-900 shadow-md mt-2 rounded-md left-0 right-0 w-full z-50" role="menu">
                    <ul class="flex flex-col space-y-2 p-4">
                        {% for link in site.navigation %}
                            {% if link.title != "Blog" or site.enableBlog %}
                                <li role="none">
                                    <a href="{{ link.url }}" role="menuitem">{{ link.title }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <h1 class="text-2xl font-bold" id="siteName">{{ site.name }}</h1>
        </div>
        <nav class="hidden md:flex items-center space-x-4" role="navigation" aria-label="Main navigation">
            <ul class="flex space-x-4">
                {% for link in site.navigation %}
                    {% if link.title != "Blog" or site.enableBlog %}
                        <li>
                            <a href="{{ link.url }}" class="md:text-lg">{{ link.title }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </nav>
        <div class="ml-4">
            <button id="themeToggleButton" class="btn btn-ghost btn-lg md:btn-lg" aria-pressed="false" aria-label="Toggle theme">
                <i class="fas fa-moon h-8 w-8 md:text-lg" aria-hidden="true"></i>
            </button>
        </div>
    </div>
</header>