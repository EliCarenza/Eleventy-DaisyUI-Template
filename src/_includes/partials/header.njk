<header class="bg-base-100 shadow-md">
      <div class="container mx-auto p-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-primary-500">{{ site.name }}</h1>
        <nav class="flex items-center space-x-4">
            <ul class="flex space-x-4">
                {% for link in site.navigation %}
                    <li>
                        <a href="{{ link.url }}" class="btn btn-ghost">{{ link.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
        <div class="theme-switcher ml-4">
            <label for="theme-select" class="sr-only">Choose theme:</label>
            <select id="theme-select" class="select select-bordered">
                {% for theme in themes %}
                    <option value="{{ theme }}">{{ theme | capitalize }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</header>